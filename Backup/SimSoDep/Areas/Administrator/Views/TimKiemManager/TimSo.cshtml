@model IEnumerable<SimSoDep.Areas.Administrator.Models.SimSoDaiLyModes>
<script src="@Url.Content("~/Scripts/hightlightsearch.js")" type="text/javascript"></script>
<script type="text/javascript">
    var searchStr = @Html.Raw(Json.Encode(ViewBag.SearchStr));
    $(document).ready(function () {
        $("#searchStringManager").val(searchStr);
        $("#tblTimKiemResult").highlight(searchStr);
    });
</script>
<style>
    .highlight
    {
        background-color: greenyellow;
    }
</style>
<h3>
    Kết quả</h3>
<table id="tblTimKiemResult">
    <tr>
        <th>
            Số điện thoại
        </th>
        <th>
            Giá tiền
        </th>
        <th>
            Tên đại lý
        </th>
        <th>
            Giá đại lý
        </th>
        <th>
            Đại lý triết khấu
        </th>
        <th>
            Đại lý thu về
        </th>
        <th>
            Hoa hồng mình được
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @string.Format("{0:0,0}", long.Parse(item.GiaTien))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDaiLy)
            </td>
            <td>
                @string.Format("{0:0,0}", item.GiaDaiLy)
            </td>
            <td>
                @string.Format("{0:0,0}%", item.DaiLyTrietKhau)
            </td>
            <td>
                @string.Format("{0:0,0}", item.DaiLyThuVe)
            </td>
            <td>
                @string.Format("{0:0,0}", item.MinhDuoc)
            </td>
        </tr>
    }
</table>
