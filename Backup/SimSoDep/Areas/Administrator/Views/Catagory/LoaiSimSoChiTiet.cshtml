@using SimSoDep.Models
@model List<LoaiSimChiTietModel>
@{
    ViewBag.Title = "LoaiSimSoChiTiet";
    var grid = new WebGrid(Model, rowsPerPage: 100);
}
<h2>
    Loại sim chi tiết</h2>
@Html.Partial("_CatagoryMenu")
<div class="tableContent">
@Html.ActionLink("Thêm loại sim số","Add","LoaiSimSoChiTietManager")
    @grid.GetHtml(columns: grid.Columns(
                             grid.Column("Id", "ID"),
                             grid.Column("Ten", "Loại sim"),
                                     grid.Column("SapXep", "Sắp xếp"),
                                             grid.Column("TenStatus", "Status"),
                             grid.Column("Alias", "Alias"),
                                             grid.Column("EnumFixed", "Enum data"),
                                     grid.Column(columnName: "", header: "", format: (item) =>
                                     {
                                         var links = Html.ActionLink("Edit", "Edit", new {controller="LoaiSimSoChiTietManager", id = item.Id }) + " | " +
                                                     Html.ActionLink("Delete", "Delete", new { controller = "LoaiSimSoChiTietManager", id = item.Id });

                                         return Html.Raw(links);

                                     })
                       ))
</div>
