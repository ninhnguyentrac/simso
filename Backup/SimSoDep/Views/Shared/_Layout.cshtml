            $('#field').keyup(function () {
                $('#x').fadeIn();
                if ($.trim($('#field').val()) == '') {
                    $('#x').fadeOut();
                }
            });
            // on click of &quot;X&quot;, delete input field value and hide &quot;X&quot;
            $('#x').click(function () {
                $('#field').val('');
                $(this).hide();
            });

        });
        
