@using SimSoDep.Models
@model List<NamSinhModel>
@{
    ViewBag.Title = "Nam sinh";
    var grid = new WebGrid(Model, rowsPerPage: 100);
}
<h2>
    Loại giá</h2>
@Html.Partial("_BoiSimSoMenu")
<div class="tableContent">
    @Html.ActionLink("Thêm năm sinh", "Create", "NamSinhManager")
    @grid.GetHtml(columns: grid.Columns(
                             grid.Column("IdNamSinh", "ID"),
                             grid.Column("Nam", "Năm"),
                             grid.Column("TenNguHanh", "Ngũ Hành"),
                             grid.Column("TenBanMenh", "Tên bản mệnh"),
                             grid.Column("MoTa", "Mô tả"),
                             grid.Column(columnName: "", header: "", format: (item) =>
                             {
                                 var links = Html.ActionLink("Edit", "Edit", new { controller = "NamSinhManager", id = item.IdNamSinh }) + " | " +
                                             Html.ActionLink("Delete", "Delete", new { controller = "NamSinhManager", id = item.IdNamSinh });

                                 return Html.Raw(links);

                             })
                       ))
</div>
